---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'About';
const description = 'About your blog.';
const permalink = `${Astro.site.href}about`;
---

<BaseLayout title={title} description={description} permalink={permalink} current="about">
  <div class="container">
    <h1>About</h1>
    <figure class="about-image">
      <img src="/assets/profile.gif" alt="Illustration of a notebook" width="330">
      <figcaption>
        SubashCS 
      </figcaption>
    </figure>
    <p>Hi, I am a full stack software developer at <a href="https://logpoint.com/" target="_blank">Logpoint Nepal</a>.</p>
    <p>I specialize in designing web and mobile applications.</p>
   <p>Oops !! Content coming soon</p>
  </div>
</BaseLayout>

<style>
  .about-image {
    float: right;
    margin: -3em -7em 2em 2em;
    max-width: 300px;
  }

  .about-image img {
    border-radius: 8px;
    margin-bottom: 1.5em;
  }

  @media (max-width: 1020px) {
    .about-image {
      float: none;
      margin: 0 auto 2em;
    }
  }
</style>
