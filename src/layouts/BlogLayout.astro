---
import Layout from '~/layouts/PageLayout.astro';
const { meta } = Astro.props;
---

<Layout {meta}>
	<section class="px-2 sm:px-2 py-12 sm:py-16 lg:py-20 mx-auto max-w-7xl">
		<header>
			<h1
				class="text-center text-4xl md:text-4xl font-bold leading-tighter tracking-tighter mb-8 md:mb-16 font-heading"
			>
				<slot name="title" />
			</h1>
		</header>
		<slot />
	</section>
</Layout>
