---

<section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-7xl">
	<div class="grid gap-6 row-gap-10 md:grid-cols-1">
		<div class="md:pb-6 md:pr-16">
			<h2 class="mb-8 text-3xl lg:text-4xl font-bold font-heading">
			  Professional Work Experience Highlights
			</h2>
			<div class="pl-10">
				{
					workExperiences.map(job =>{
						return (
						<div class="flex">
							<div class="flex flex-col items-center mr-4">
								<div>
									<div class="flex items-center justify-center w-10 h-10 rounded-full border-primary-600 border-2">
										<Icon name="tabler:arrow-down" class="w-6 h-6 text-primary-600 dark:text-slate-200" />
									</div>
								</div>
								<div class="w-px h-full bg-gray-300 dark:bg-zinc-500"></div>
							</div>
							<div class="pt-1 pb-8">
								<p class="mb-2 text-lg font-normal text-gray-900 dark:text-slate-300">{job.fromDate} - {job.toDate}</p>
								<p class="mb-2 text-xl font-bold text-gray-900 dark:text-slate-300">{job.title}</p>
								<p class="mb-2 text-lg font-normal text-gray-900 dark:text-slate-300">{job.employer}</p>
								<p class="text-gray-600 dark:text-slate-400">
									{job.description}
								</p>
							</div>
						</div>
						)
					})
				}


				<div class="flex">
					<div class="flex flex-col items-center mr-4">
						<div>
							<div class="flex items-center justify-center w-10 h-10 rounded-full border-primary-600 border-2 bg-primary-600">
								<Icon name="tabler:check" class="w-6 h-6 text-white dark:text-slate-200" />
							</div>
						</div>
					</div>
					<div class="pt-1">
						<p class="mb-2 text-xl font-bold text-gray-900 dark:text-slate-300">Today</p>
						<p class="text-gray-600 dark:text-slate-400"></p>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
