---
import Grid from '~/components/blog/Grid.astro';
import { findPostsByIds } from '~/utils/posts';

const featuredArticlesID = [
	'recapitulating-solid-design-principles-js',
	'a-guide-to-developing-fastapi',
	'data-analysis-tool-hugging-face-transformer',
	'the-html-dialog-element',
	'an-insight-into-vue3',
];
const posts = await findPostsByIds(featuredArticlesID);
---

<section class="px-4 py-16 mx-auto max-w-7xl lg:py-20">
	<div class="flex flex-col mb-6 lg:justify-between lg:flex-row md:mb-8">
		<h2 class="max-w-lg mb-2 text-3xl font-bold tracking-tight sm:text-4xl sm:leading-none lg:mb-5 group font-heading">
			<span class="inline-block mb-1 sm:mb-4"> The Best and Featured Articles</span>
		</h2>

		<p class="text-gray-700 dark:text-slate-400 lg:text-sm lg:max-w-md">BROWSE TOP CONTENT HERE !!</p>
	</div>
	<div class="max-w-5xl mx-auto">
		<Grid posts={posts} />
	</div>
</section>
