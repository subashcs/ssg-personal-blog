---
import { Picture } from '@astrojs/image/components'

import { findImage } from '~/utils/images';
import { getPermalink } from '~/utils/permalinks';

const { post } = Astro.props;

const image = await findImage(post.image);
---

<article class="mb-6 rounded transition ease-in-out duration-200 hover:bg-slate-100 dark:hover:bg-gray-800">
	<a
		href={getPermalink(post.slug, 'post')}
		class="decoration-none transition"
	>
		<div class="flex flex-col md:flex-row">
			{
				image && (
					<Picture
						src={image}
						class="object-cover rounded shadow-l"
						widths={[200, 400]}
						sizes="(max-width: 400px) 200px, 400px"
						alt={post.title}
						aspectRatio={"4:2	"}
					/>
				)
			}
			<div class="w-full md:w-3/4 md:pl-3">
				<h3 class="mb-2 mt-2 text-xl font-bold leading-snug sm:text-2xl font-heading">
					<span
						class="hover:text-primary-600 transition ease-in duration-200"
					>
						{post.title}
				</span>
				</h3>
				<p class="text-gray-700 dark:text-gray-400">{post.excerpt || post.description}</p>
			</div>
		</div>	
	</a>
</article>
